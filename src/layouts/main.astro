---
import '@fontsource-variable/nunito-sans'; // Supports weights 200-900
import App from "../components/app";
import Header from "../components/header";
import type { HeaderProps } from "../type/layout";
import '../fontAwesome'; // Import the Font Awesome configuration
import '../css/global.scss';

interface Props {
  title: string;
  cssClass?: string;
  showHeader?: boolean; // New prop
}

let header: HeaderProps | undefined = undefined;

const { 
  title, 
  cssClass, 
  showHeader = true // Default to true
} = Astro.props;

---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <link href="/favicon.svg" rel="shortcut icon" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body>
    <App client:load>
      {showHeader && <Header text={title} cssClass={cssClass} client:load />}
      <main class="px-6 mx-auto pt-16 max-w-[1536px]" transition:animate="slide">
        <slot />
      </main>
    </App>
  </body>
</html>
