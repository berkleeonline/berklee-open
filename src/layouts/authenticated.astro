---
import '@fontsource-variable/nunito-sans'; // Supports weights 200-900
import Header from "../components/header";
import App from "../components/app"
import { ViewTransitions } from 'astro:transitions';
import type { HeaderProps } from "../type/layout";
import '../fontAwesome'; // Import the Font Awesome configuration

let header: HeaderProps | undefined = undefined;

const { title, cssClass } = Astro.props;

---
<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8">
    <ViewTransitions />
    <link href="/public/favicon.svg" rel="shortcut icon" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>
    <Header text={title} />
    <main class={cssClass}>
      <div class="px-6 mx-auto w-full pt-16 max-w-[1536px]" transition:animate="slide">
        <slot />
      </div>
    </main>
  </body>
</html>